1)let num = Number(prompt('Digite um número: '));
if (num > 0) {
    console.log('Positivo');
} else if (num < 0) {
    console.log('Negativo');
} else {
    console.log('Zero');
}
2)let num = Number(prompt('Digite um número: '));
if (num % 2 == 0) {
    console.log('Par');
} else {
    console.log('Ímpar');
}
3)let nota = Number(prompt("Digite uma nota de 0 a 10: "));
if (nota >= 9 && nota < 11) {
    document.write("nota A");
} else if (nota == 8) {
    document.write("nota B");
} else if (nota == 7) {
    document.write("nota C");
} else if (nota == 6) {
    document.write("nota D");
} else if (nota <= 5 && nota >= 0) {
    document.write("nota F");
} else {
    document.write("nota inválida");
}
4)let ano = Number(prompt("Digite o ano em que você está: "));
if (ano % 4 == 0 && ano % 100 != 0 || ano % 400 == 0) {
    document.write("bissexto");
} else {
    document.write("não bissexto");
}
5)let num = Number(prompt("Digite um número qualquer: "));
