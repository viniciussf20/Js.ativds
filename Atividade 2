11)let dia = Number(prompt("Digite o número que representa o dia da semana em que você se encontra: "));
let name = prompt("Me diga o seu nome: ");

switch (dia) {
    case 0:
        document.write(`Tenha um ótimo Domingo, ${name}!`);
        break;
    case 1:
        document.write(`Tenha uma ótima Segunda, ${name}!`);        
        break;
    case 2: 
        document.write(`Tenha uma ótima Terça, ${name}!`);
        break;
    case 3: 
        document.write(`Tenha uma ótima Quarta, ${name}!`);
        break;    
    case 4: 
        document.write(`Tenha uma ótima Quinta, ${name}!`);
        break;
    case 5: 
        document.write(`Tenha uma ótima Sexta, ${name}!`);
        break;
    case 6: 
        document.write(`Tenha um ótimo Sabádo, ${name}!`);
        break;
    default:
        document.write(`Dia inválido, ${name}!`);
        break;
}
