    document.write(`o número ${num} entre 10 e 20`);
} else {
    document.write(`o número ${num} não está entre 10 e 20`);
}
6)let num1 = Number(prompt("Digite um número qualquer: "));
let num2 = Number(prompt("Digite outro número qualquer: "));
if (num1 > num2) {
    document.write(`o número ${num1} é maior que o número ${num2}`);
} else {
    document.write(`o número ${num2} é maior que o número ${num1}`);
}
7)let char = prompt("Digite um caractere qualquer: ");
let newchar = char.toLowerCase();
switch (newchar) {
    case 'a':
        document.write("Vogal");
        break;
    case 'e':
        document.write("Vogal");
        break;
    case 'i':
        document.write("Vogal");
        break;
    case 'o':
        document.write("Vogal");
        break;
    case 'u':
        document.write("Vogal");
        break;
    default:
        document.write("Consoante");
        break;
}
8)let num = Number(prompt("Digite um número qualquer: "));
if (num % 3 == 0 && num % 5 !== 0) {
    document.write(` o número ${num} é multiplo de 3`);
} else if (num % 5 == 0 && num % 3 !== 0) {
    document.write(` o número ${num} é multiplo de 5`);
} else if (num % 3 == 0 && num % 5 == 0) {
    document.write(` o número ${num} é multiplo de 3 e 5`);
} else {
    document.write(` o número ${num} não é multiplo de 3 ou 5`);
}
9)function faseDoDia(hora) {
    if (hora >= 0 && hora < 6) {
        return("Boa madrugada");
    } else if (hora >= 6 && hora < 12) {
        return("Bom dia");
    } else if (hora >= 12 && hora < 18) {
        return("Boa tarde");
    } else if (hora >= 18 && hora <= 23) {
        return("Boa noite");
    } else {
        return("Hora inválida");
    }
}
const newHora = new Date(). getHours();
const newFase = faseDoDia(newHora);
document.write(newFase);
