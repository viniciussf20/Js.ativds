16)let numDoMes = Number(prompt("Digite o número do mês: "));
let estacao;
*** Como é contado mundialmente:
switch (numDoMes) {
    case 1:
    case 2:
    case 12:
        estacao = "Inverno";
        break;
    case 3:
    case 4:
    case 5:
        estacao = "Primavera";
        break;
    case 6:
    case 7:
    case 8:
        estacao = "Verao";
        break;
    case 9:
    case 10:
    case 11:
        estacao = "Outono";
        break;
    default:
        estacao = "Mês inválido";
        break;
}
***como é contado no Brasil:
switch (numDoMes) {
    case '12':
    case '1':
    case '2':
        estacao = "Verão";
        break;
    case '3':
    case '4':
    case '5':
        estacao = "Outono";
        break;
    case '6':
    case '7':
    case '8':
        estacao = "Inverno";
        break;
    case '9':
    case '10':
    case '11':
        estacao = "Primavera";
        break;
    default:
        estacao = "Mês inválido";
        break;
}

document.write(`A estação do ano é: ${estacao}`);
17)let nota = Number(prompt("Digite uma nota de 0 a 10: "));
let classificacaoDaNota = nota >= 9 && nota <= 10 ? "Nota A" :
                            nota === 8 ? "Nota B" :
                            nota === 7 ? "Nota C" :
                            nota === 6 ? "Nota D" :
                            nota <= 5 && nota >= 0 ? "Nota F" :
                                "Nota inválida";
document.write(classificacaoDaNota);
